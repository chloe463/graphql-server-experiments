{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Comment {
  id        Int      @id @default(autoincrement())
  email     String
  name      String
  postId    Int
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  username String
  email    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Questionnaire {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  state       Int      @default(1)
  startAt     DateTime
  endAt       DateTime
  questions   Question[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt @default(now())
  deleted     Boolean  @default(false)
  deletedAt   DateTime?
}

model Question {
  id              Int           @id @default(autoincrement())
  questionnaireId Int
  questionnaire   Questionnaire @relation(fields: [questionnaireId], references: [id])
  text            String
  type            Int
  required        Boolean       @default(false)
  options         Option[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt @default(now())
}

model Option {
  id              Int           @id @default(autoincrement())
  text            String
  questionId      Int
  question        Question      @relation(fields: [questionId], references: [id])
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt @default(now())
}

model Todo {
  id              Int           @id @default(autoincrement())
  task            String
  finishedAt      DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt @default(now())
}
